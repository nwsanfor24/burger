<h1 class="center-align">Burgers!</h1>

<div class="row valign-wrapper">
  <div class="col m4 valign left-align">
    <div class="card large">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="../public/assets/css/img/devour-burger.jpg">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">Burgers that are not devoured<i
            class="material-icons right">more_vert</i></span>
      </div>
      <div class="card-reveal">
        <span class="card-title"><i class="material-icons right">close</i></span>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="col m4 valign left-align">
    <div class="card large">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src="../public/assets/css/img/eaten-burger.jpg">
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4">Burgers that are devoured!<i
            class="material-icons right">more_vert</i></span>
      </div>
      <div class="card-reveal">
        <span class="card-title"><i class="material-icons right">close</i></span>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="br">Burger Name:</label>
        <input type="text" id="br" name="burger_name">
        <p>
          <label>
            <input class="with-gap" name="group1" type="radio" value="1" />
            <span>Devoured!</span>
          </label>
        </p>
        <p>
          <label>
            <input class="with-gap" name="group1" type="radio" value="0" />
            <span>Not Devoured!</span>
          </label>
        </p>
      </div>

      <button type="submit">Add Burger</button>


    </form>
</div>